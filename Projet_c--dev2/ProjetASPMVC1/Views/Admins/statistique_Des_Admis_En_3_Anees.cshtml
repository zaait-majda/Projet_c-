    var chart6 = new CanvasJS.Chart("chartContainerForIndusAttente", {
            animationEnabled: true,

	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "statistique de la list d'attente en 3 ème annee génie industriel"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.dataPointsForIndusAttente)
	}]
});


    //for gtr

    var chart7 = new CanvasJS.Chart("chartContainerForGtrAttente", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "statistique de la list d'attente en 3 ème annee génie Télécom et réseau"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.dataPointsForGtrAttente)
	}]
});


    //for gpmc
    var chart8 = new CanvasJS.Chart("chartContainerForGpmcAttente", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "statistique de la list d'attente en 3 ème annee génie des procédés et céramique"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.dataPointsForGpmcAttente)
	}]
    });
    //generation des charts

    chart1.render();
    chart2.render();
    chart3.render();
    chart4.render();
    chart5.render();
    chart6.render();
    chart7.render();
    chart8.render();
}
    </script>
</head>
<body>
    <p class="container">
        <div>
            <a class="btn btn-primary col-lg-4 " data-toggle="collapse" href="#admis" role="button" aria-expanded="false" aria-controls="admis"><i class="far fa-chart-bar"></i>&nbsp; statistique Des candidats Admis En 3 Anees</a>
            <button class="btn btn-primary col-lg-4" type="button" data-toggle="collapse" data-target="#attent" aria-expanded="false" aria-controls="attent"><i class="far fa-chart-bar"></i>&nbsp; Des candidats en liste d'attente En 3 Anees</button>
