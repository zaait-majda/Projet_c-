
@{
    ViewBag.Title = "statistique_Des_Admis_En_3_Anees";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<html>
<head>
    <script>
window.onload = function () {

    var chart1 = new CanvasJS.Chart("chartContainerForInfoAdmis", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "statistique des admis en 3 ème année génie informatique"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
        type: "column",
		dataPoints: @Html.Raw(ViewBag.dataPointsForInfoAdmis)
	}]
});



        //chart for industriel students
    var chart2 = new CanvasJS.Chart("chartContainerForIndusAdmis", {
            animationEnabled: true,

	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "statistique des admis en 3 ème annee génie industriel"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "column",
		dataPoints: @Html.Raw(ViewBag.dataPointsForIndusAdmis)
	}]
});


    //for gtr

    var chart3 = new CanvasJS.Chart("chartContainerForGtrAdmis", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
        text: "statistique des admis en 3 ème annee génie Télécom et réseau"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "column",
