            <div id="chartContainerForInfoAttente" style="height:300px;width:40%;"></div>
            <div id="chartContainerForIndusAttente" style="height:300px;width:40%;margin-left:20px"></div>
        </div>

        <div class="row">
            <div id="chartContainerForGpmcAttente" style="height:300px;width:40%;margin-top:20px"></div>
            <div id="chartContainerForGtrAttente" style="height:300px;width:40%;margin-top:20px;margin-left:20px"></div>
        </div>
    </div>






    <script src="~/Content/canvasjs.js"></script>
</body>
</html>


