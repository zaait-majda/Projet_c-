
@{
    ViewBag.Title = "statistique_Des_Presents_3annee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html>
<head>
    <script>
window.onload = function () {

    var chart1 = new CanvasJS.Chart("chartContainerForInfo", {
	animationEnabled: true,
	theme: "light2", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "statistique des condidats présents au concours 3 ème année génie informatique"
        },
        exportEnabled: true,
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
		type: "pie",
		dataPoints: @Html.Raw(ViewBag.dataPointsForInfo)
	}]
});



        //chart for industriel students
        var chart2 = new CanvasJS.Chart("chartContainerForIndus", {
            animationEnabled: true,

            theme: "light2", // "light1", "light2", "dark1", "dark2"
            exportEnabled: true,
	title: {
        text: "statistique des condidats présents au concours 3 ème année génie industriel"
            },

	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
        type: "pie",
		dataPoints: @Html.Raw(ViewBag.dataPointsForIndus)
	}]
});


    //for gtr

    var chart3 = new CanvasJS.Chart("chartContainerForGtr", {
	animationEnabled: true,
        theme: "light2", // "light1", "light2", "dark1", "dark2"
        exportEnabled: true,
	title: {
        text: "statistique des condidats présents au concours 3 ème année génie télécome et réseau"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
        type: "pie",
		dataPoints: @Html.Raw(ViewBag.dataPointsForGtr)
	}]
});


    //for gpmc
    var chart4 = new CanvasJS.Chart("chartContainerForGpmc", {
	animationEnabled: true,
        theme: "light2", // "light1", "light2", "dark1", "dark2"
        exportEnabled: true,
	title: {
        text: "statistique des condidats présents au concours 3 ème année génie des procédés et céramique"
	},
	axisY: {
		title: "Nombre des condidats"
	},
	data: [{
        type: "pie",
		dataPoints: @Html.Raw(ViewBag.dataPointsForGpmc)
	}]
});
    chart1.render();
    chart2.render();
    chart3.render();
    chart4.render();
}
    </script>
</head>
<body>

    <h2>statistique des condidats présents au concours 3 ème année</h2>
    <div class="container">
        <div class="row">
            <div id="chartContainerForInfo" style="height:300px;width:40%;"></div>
            <div id="chartContainerForIndus" style="height:300px;width:40%;margin-left:20px"></div>
        </div>

        <div class="row">
            <div id="chartContainerForGpmc" style="height:300px;width:40%;margin-top:20px"></div>
            <div id="chartContainerForGtr" style="height:300px;width:40%;margin-top:20px;margin-left:20px"></div>
        </div>
    </div>





    <script src="~/Content/canvasjs.js"></script>
</body>
</html>

